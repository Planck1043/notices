<p>
  <strong>Title:</strong>
  <%= @notice.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @notice.text %>
</p>

<h2>Comments</h2>
<% @notice.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@notice, @notice.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', notices_path %>
<%= link_to 'Edit', edit_notice_path %>
